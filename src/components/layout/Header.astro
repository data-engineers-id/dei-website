---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Events', href: '/events' },
  { label: 'Articles', href: '/articles' },
  { label: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-[#1e3a5f] shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img src="/images/logo.png" alt="Data Engineering Indonesia" class="h-10 w-auto" />
        <span class="text-white font-bold text-lg hidden sm:block">Data Engineering Indonesia</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`text-sm font-medium transition-colors duration-200 ${
              currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? 'text-white font-semibold border-b-2 border-white'
                : 'text-white'
            }`}
            style={currentPath !== item.href && !currentPath.startsWith(item.href + '/') ? 'color: white;' : undefined}
            onmouseover={currentPath !== item.href && !currentPath.startsWith(item.href + '/') ? "this.style.color='#d1d5db'" : "this.style.color='#d1d5db'"}
            onmouseout={currentPath !== item.href && !currentPath.startsWith(item.href + '/') ? "this.style.color='white'" : "this.style.color='white'"}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-white hover:text-white/80 hover:bg-white/10"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <nav class="flex flex-col space-y-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class={`px-3 py-2 rounded-md text-base font-medium ${
              currentPath === item.href || currentPath.startsWith(item.href + '/')
                ? 'text-white bg-white/20 font-semibold'
                : 'text-white hover:bg-white/10'
            }`}
            style={currentPath !== item.href && !currentPath.startsWith(item.href + '/') ? 'color: white;' : undefined}
            onmouseover={currentPath !== item.href && !currentPath.startsWith(item.href + '/') ? "this.style.color='#d1d5db'" : undefined}
            onmouseout={currentPath !== item.href && !currentPath.startsWith(item.href + '/') ? "this.style.color='white'" : undefined}
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
